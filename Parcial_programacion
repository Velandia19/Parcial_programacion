respuesta="Funcion a evaluar"

#f= lambda x: math.sqrt(1+x**2)
f= lambda x: x
print(f)
a = eval(input(limite_1))
b = eval(input(limite_2))
n = eval(input(intervalos))
suma = f(a)
n_1=(n-1)
h= (b-a)/n_1
N=1
x_1=a+(n*h)
while n%2==0:
    impar=eval(input(respuesta_1))
    if (impar%2!=0):
        break
    print(impar)
    
