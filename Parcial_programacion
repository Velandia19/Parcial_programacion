suma_1=sum(map(int, lista_impar))
suma_2=sum(map(int, lista_par))
print(respuesta_5,suma_1)
print(respuesta_6, suma_2)

integral= (h/3)*(f(a)+4*suma_1+2*suma_2+f(b))

